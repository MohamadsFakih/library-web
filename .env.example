DATABASE_URL="file:./dev.db"

# Auth – generate a real secret: openssl rand -base64 32
AUTH_SECRET=dev-secret-change-in-production-min-32-chars

# Admin user (used by db:seed)
ADMIN_PASSWORD=admin

# HuggingFace – AI media suggestions
# Get your token from https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# RAWG – game cover images for all platforms (optional, free key at rawg.io/apidocs)
# Without this, Steam Store is used (free, PC games only)
RAWG_API_KEY=your_rawg_api_key_here